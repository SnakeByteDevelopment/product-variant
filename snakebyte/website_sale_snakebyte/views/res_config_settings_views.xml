<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.snakebyte</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="sale_product_catalog_settings" position="inside">
                <div class="col-12 col-lg-offset-6 col-lg-6 o_setting_box" id="product_sale_default_messages">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="out_of_stock_msg"/>
			<div class="text-muted">
				Set a default out of stock message for eCommerce. This will be used if no message given on the product form.
			</div>
			<field name="out_of_stock_msg" widget="html"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
